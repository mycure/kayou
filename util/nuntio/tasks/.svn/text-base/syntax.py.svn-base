#
# ---------- information ------------------------------------------------------
#
# Describes the keywords of the message language and the regular
# expressions which are needed by the tokenizer and the parser
#


#
# ---------- globals ----------------------------------------------------------
#

s_nextline = ".*"
s_space = "[ \t\r]+"

s_lbrace = "{"
s_rbrace = "}"
s_lbrack = "\["
s_rbrack = "\]"
s_lchevron = "<"
s_rchevron = ">"
s_lparen = "\("
s_rparen = "\)"
s_colon = ":"

s_digit = "[0-9]+"
s_word = "[a-zA-Z_]+[a-zA-Z0-9_]*"

s_anything = "(.*)\s*"

#
# Message language keywords
#
s_message = "message"
s_integer = "integer"
s_double = "double"
s_string = "string"
s_struct = "struct"
s_signed = "signed"
s_unsigned = "unsigned"
s_raw = "raw"

s_lrawblock = "@@"
s_rrawblock = "@@"


